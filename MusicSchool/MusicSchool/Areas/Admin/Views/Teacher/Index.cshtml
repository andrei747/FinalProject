

@model IEnumerable<MusicSchool.Areas.Admin.Models.Teachers>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link type="text/css" rel="stylesheet" href="~/css/Teachers.css" />
</head>
<body>
    <h1>Teachers</h1>

    <a asp-controller="Course">go to Courses</a>


    <table class="table-striped">

        <tr>
            <th scope="col">#</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            
            <th scope="col">Actions</th>

        </tr>

        <tbody>
            @foreach (var teacher in Model)
            {
            <tr>
                <td scope="row">@teacher.TeacherId</td>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>               
                <td>@teacher.ShortDescription</td>
                

                
                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = teacher.TeacherId }) |
                    @Html.ActionLink("Details", "Details", new { id = teacher.TeacherId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = teacher.TeacherId })
                </td>

            </tr>



            }
        </tbody>


    </table>

   
        <a asp-action="Create" >CreateTeacher</a>
    
    





</body>
</html>
